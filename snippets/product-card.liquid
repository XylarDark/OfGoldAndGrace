  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.product-card:hover .product-card__image {
  transform: scale(1.05);
}

.product-card__image-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  color: var(--color-base-text-muted);
}

.product-card__actions {
  position: absolute;
  top: 0.75rem;
  right: 0.75rem;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  opacity: 0;
  transform: translateX(10px);
  transition: opacity 0.2s ease, transform 0.2s ease;
}

.product-card:hover .product-card__actions {
  opacity: 1;
  transform: translateX(0);
}

.product-card__quick-view {
  width: 40px;
  height: 40px;
  background: var(--color-background);
  border: 1px solid var(--color-border);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  color: var(--color-base-text);
  transition: all 0.2s ease;
}

.product-card__quick-view:hover {
  background: var(--color-background-2);
  transform: scale(1.1);
}

.product-card__quick-view:focus {
  outline: 2px solid var(--color-base-accent-1);
  outline-offset: 2px;
}

.product-card__link {
  text-decoration: none;
  color: inherit;
  display: block;
}

.product-card__content {
  padding: 1rem;
}

.product-card__vendor {
  font-size: 0.875rem;
  color: var(--color-base-text-muted);
  margin-bottom: 0.25rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.product-card__title {
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
  line-height: 1.4;
}

.product-card__rating {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 0.5rem;
  font-size: 0.875rem;
  color: var(--color-base-text-muted);
}

.rating-stars {
  color: #ffc107;
}

.product-card__price {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--color-base-accent-1);
  margin-bottom: 1rem;
}

.price--sale {
  color: var(--color-base-error);
}

.price--compare {
  color: var(--color-base-text-muted);
  text-decoration: line-through;
  font-size: 0.875rem;
  margin-left: 0.5rem;
}

.product-card__form {
  margin-top: auto;
}

.product-card__add-to-cart {
  width: 100%;
  padding: 0.75rem 1rem;
  background: var(--color-base-accent-1);
  color: white;
  border: none;
  border-radius: 0.25rem;
  font-size: 0.875rem;
  font-weight: 600;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.product-card__add-to-cart:hover {
  background: var(--color-base-accent-2);
}

.product-card__add-to-cart:focus {
  outline: 2px solid var(--color-base-accent-1);
  outline-offset: 2px;
}

.product-card__sold-out {
  text-align: center;
  padding: 0.75rem;
  background: var(--color-background-2);
  color: var(--color-base-text-muted);
  border-radius: 0.25rem;
  font-weight: 500;
}
</style>
